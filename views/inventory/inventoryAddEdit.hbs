{{!-- obtaining values from the inventory controller --}}
<h3>{{ViewTitle}}</h3>
<form action="/inventory" method="POST">
    <input type="hidden" name="_id" value="{{inventory._id}}">
    <div class="form-group">
        <label>Product ID</label>
        <input type="text" maxlength="100" class="form-control" name="productID" placeholder="Product ID" value="{{inventory.productID}}" required>

        <div class="text-danger">
            {{inventory.productIDError}}
        </div>
    </div>
    <div class="form-group">
        <label>Product Name</label>
        <input type="text" maxlength="100" class="form-control" name="productName" placeholder="Product Name" value="{{inventory.productName}}" required>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Product Price</label>
            <input type="number" min='10' max='99' class="form-control" name="productPrice" placeholder="Product Price ($$)" "{{inventory.productPrice}} " required>
        </div>
        <div class="form-group col-md-6">
            <label>Product Color</label>
            <input type="text" min='100' max='99' class="form-control" name="productColor" placeholder="Product Color" "{{inventory.productColor}} " required>
        </div>
    </div>
    <div class="form-group">
    <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
    <a class="btn btn-secondary" href="/inventory/list"><i class="fa fa-list-alt"></i> View All Products</a>
    </div>
</form>